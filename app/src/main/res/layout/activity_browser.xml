<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Browser"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/weburl"
            android:selectAllOnFocus="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="5"
            android:imeOptions="actionSearch"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="about:blank"/>
        <Button
            android:id="@+id/searchurl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="前往" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:visibility="gone" />
    <FrameLayout
        android:id="@+id/frame"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <WebView
            android:id="@+id/webshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/gray_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/houtui"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/back"
                android:clickable="true"
                android:tint="@color/white"
                android:visibility="invisible"
                android:padding="15dp"/>
            <ImageView
                android:id="@+id/qianjin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/forward"
                android:clickable="true"
                android:tint="@color/white"
                android:visibility="invisible"
                android:padding="15dp"/>
            <ImageView
                android:id="@+id/caidan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/menu"
                android:clickable="true"
                android:tint="@color/white"
                android:padding="15dp"/>
            <ImageView
                android:id="@+id/zhuye"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:clickable="true"
                android:tint="@color/white"
                android:padding="15dp"/>
            <FrameLayout
                android:clipChildren="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/chuangkou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/windows"
                    android:clickable="true"
                    android:tint="@color/white"
                    android:padding="15dp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>